{
  "name": "sports_mgmt_app-server",
  "version": "1.0.0",
  "description": "Sports Management REST API Server",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.server.json && echo \"âœ… build ok\" && ls -la dist | head",
    "start": "node dist/index.js",
    "dev:orig": "ts-node src/index.ts",
    "dev": "nodemon",
    "dev:watch": "nodemon",
    "dev:once": "ts-node -r tsconfig-paths/register src/index.ts",
    "prod": "npm run build && node dist/index.js",
    "ingest": "ts-node -r tsconfig-paths/register src/cli/ingest.ts",
    "dev:espn": "ts-node -r tsconfig-paths/register src/espn/dev/try-endpoints.ts",
    "dev:ts": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:debug": "nodemon --inspect --exec 'ts-node -r tsconfig-paths/register' src/index.ts",
    "import:nfl": "tsx src/scripts/import-nfl-season.ts",
    "import:draft": "tsx src/cli/import-draft.ts",
    "import:draft:year": "tsx src/cli/import-draft.ts",
    "scrape:draft": "ts-node src/cli/scrapeDraftPicks.ts",
    "test:routes": "ts-node -r tsconfig-paths/register src/test/testRoutes.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest run",
    "type-check": "tsc --noEmit",
    "cli:importWeek": "ts-node src/cli/importWeek.ts",
    "cli:backfillSeason": "ts-node src/cli/backfillSeason.ts",
    "cli:syncTeams": "ts-node src/cli/syncTeams.ts"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.2.0",
    "@sendgrid/mail": "^8.1.6",
    "argon2": "^0.44.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "dotenv-flow": "^4.1.0",
    "env-var": "^7.5.0",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "mailersend": "^2.6.0",
    "mariadb": "^3.4.5",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "p-limit": "^3.1.0",
    "p-retry": "^5.1.2",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.5.2",
    "sendgrid": "^5.2.3",
    "yargs": "^17.7.2",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "@types/argon2": "^0.14.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.27",
    "@types/p-retry": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.5.3",
    "prisma": "^7.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.16"
  },
  "directories": {
    "doc": "doc"
  },
  "overrides": {
    "debug": "4.3.7"
  },
  "_moduleAliases": {
    "@": "./dist/src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "// EXAMPLE USAGE": {
    "// Import current year draft": "npm run import:draft",
    "// Import specific year draft": "npm run import:draft:year 2024"
  }
}
